<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:textStyle="bold"
        android:text="Employee Name"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etWorkedHours"
        android:inputType="number"
        android:hint="Enter number of worked hours"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_below="@id/tvName"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/etPaymentPerHour"
        android:hint="Enter payment per hour"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_below="@id/etWorkedHours"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPaymentPerHour"
        android:padding="15dp"
android:textStyle="bold"
        android:id="@+id/tvDate"
        android:text="Select Date+"
        android:background="@drawable/datebackground"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        />
    <RadioGroup
        android:id="@+id/radioGroupAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/tvDate"
        android:layout_marginLeft="15dp"
        >

        <RadioButton
            android:id="@+id/radioBtnAbsent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Absent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/radioBtnPresent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Present"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOk"
        android:text="Save"
        android:layout_centerHorizontal="true"
        android:background="@drawable/et_bg"
        android:layout_below="@id/radioGroupAttendance"
        android:layout_marginBottom="20dp"
        />


</RelativeLayout>