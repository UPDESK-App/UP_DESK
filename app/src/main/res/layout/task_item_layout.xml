<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    app:cardElevation="7dp"
    app:cardCornerRadius="12dp"
    android:layout_marginHorizontal="10dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >
        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:padding="5dp"
            android:text="FileName"
            android:textColor="@color/black"
            android:textSize="18sp"

            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tvtaskUploadedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:padding="6dp"
            android:text="Employee or Employer Name"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_below="@id/tvFileName"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tvUserType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvtaskUploadedBy"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:padding="6dp"
            android:text="Employee/Employer"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:textColor="@color/white"
            android:background="@drawable/btn_bg_rc"
            android:layout_below="@id/tvUserType"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnViewAssignedTaskDetails"
            android:drawableEnd="@drawable/preview"
            android:drawablePadding="@dimen/_5sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_7sdp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>